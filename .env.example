# Database connection strings
# Main connection string for Prisma ORM (Pooler URL if using one, like from Supabase)
DATABASE_URL="postgresql://username:password@db.hostname.com:5432/postgres"
# Direct connection string (bypasses connection poolers, required by Prisma Migrate)
DIRECT_URL="postgresql://username:password@db.hostname.com:5432/postgres"

# NextAuth configuration (Authentication)
# Base URL of your application (needed for callbacks)
# Set to http://localhost:3000 for local development
NEXTAUTH_URL=""
# Secret for signing tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=""

# Azure AD Authentication (for NextAuth)
# Found in your Azure App Registration Overview page
AZURE_AD_CLIENT_ID=""
# Generated under Certificates & secrets in your App Registration
AZURE_AD_CLIENT_SECRET=""
# Found in your Azure App Registration Overview page
AZURE_AD_TENANT_ID=""

# Supabase configuration (Client-side accessible)
# Project URL from your Supabase project settings (API tab)
NEXT_PUBLIC_SUPABASE_URL=""
# Public Anon Key from your Supabase project settings (API tab)
NEXT_PUBLIC_SUPABASE_ANON_KEY=""

# Optional: Node environment
# Set to 'development', 'test', or 'production'
NODE_ENV="development"